<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TwoStepVerificationActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:text="Please enter the numbers you received from mail"
        android:textAlignment="center"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText2stepVerification"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonSend2stepVerification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/green_color"
        android:text="שלח"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

</LinearLayout>